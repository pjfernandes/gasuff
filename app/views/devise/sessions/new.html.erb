<h2 class="page-title text-center mt-4 mb-3"><i class="fas fa-sign-in-alt text-primary"></i> Login</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: "E-mail",
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: "Senha",
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Lembrar", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn btn-primary mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
