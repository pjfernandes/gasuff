<h2 class="page-title text-center mt-4"><i class="fas fa-vial text-primary"></i> Cadastrar amostra</h2>

<div class="buttons text-center">
  <button type="button" class = "btn btn-secondary btn-sm mr-2 mt-2" disabled>CO2</button>
  <%=link_to "CH4", new_methane_path, class: "btn btn-primary btn-sm mr-2 mt-2" %>
  <%=link_to "Sedimento", new_sediment_path, class: "btn btn-primary btn-sm mr-2 mt-2" %>
</div>

<%= simple_form_for [@carbon] do |f| %>
    <%= f.input :latitude, label: "Latitude" %>
    <%= f.input :longitude, label: "Longitude" %>
    <%= f.input :class_sample, label: false, input_html: { value: 'CO2', hidden: true } %>
    <%= f.association :researcher, :label_method => lambda { |researcher| "#{researcher.first_name.capitalize} #{researcher.last_name.capitalize}" }, collection: Researcher.all.order(:first_name), label: "Pesquisador" %>
    <%= f.input :date_sample, label: "Data de coleta", :order => [:day, :month, :year], as: :date %>
    <%= f.input :date_analysis, label: "Data da análise", :order => [:day, :month, :year], as: :date %>
    <%= f.input :concentration, label: "Concentração" %>
    <%= f.input :ph, label: "pH" %>
    <%= f.input :temperature, label: "Temperatura" %>
    <%= f.input :salinity, label: "Salinidade" %>
    <%= f.input :pressure, label: "Pressão" %>
    <%= f.input :method, label: "Método" %>
    <%= f.input :equipment, label: "Equipamento" %>

    <%= f.button :submit, "Salvar", class: "btn-primary btn-sm text-center" %>
    <%= link_to 'Voltar', samples_path, class:"btn btn-danger btn-sm mt-2 ml-2 mb-2" %>
<% end %>
