<h2 class="page-title text-center mt-4"><i class="fas fa-vial text-primary"></i> Amostras</h2>

<div class="mt-3 mb-3" id="map"
     style="width: 100%; height: 350px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="samples-container">
  <%@samples.each do |sample|%>
  <div class="card-product mt-3 rounded d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">

      <div class="card-product-infos ml-2">
        <h6><i class="page-title fas fa-flask text-primary"></i> Amostra <%=sample.id%></h6>
        <p><i class="page-title fas fa-calendar text-primary"></i> <%=sample.date_sample%></p>
        <p><i class="page-title fas fa-globe-americas text-primary"></i> Lat: <%=sample.latitude%> <strong class="text-primary">-</strong> Long: <%=sample.longitude%></p>
        <p><i class="page-title fas fa-user-graduate text-primary"></i> <%=sample.researcher_id%></p>
      </div>
  </div>
    <%= link_to "Info", "#", class:"page-title btn btn-primary mr-3" %>
  </div>
  <%end%>
</div>
