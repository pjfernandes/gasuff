<h2 class="text-center mt-3">Detalhes</h2>

<div id="map"
     style="width: 100%; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="text-center mt-4">
  <% if @sample.type == "Sediment"%>
      <p><strong>Lat/long:</strong> <%=@sample.latitude%>, <%=@sample.longitude%></p>
      <p><strong>Data da amostra:</strong> <%=@sample.date_sample%></p>
      <p><strong>Data da análise:</strong> <%=@sample.date_analysis%></p>

      <p><strong>Pesquisador:</strong> <%=@sample.researcher.first_name.capitalize%> <%=@sample.researcher.last_name.capitalize%></p>
  <%end%>

  <% if @sample.type == "Water" %>
    <div class="text-center mt-4">
      <p><strong>Lat/long:</strong> <%=@sample.latitude%>, <%=@sample.longitude%></p>
      <p><strong>Data da amostra:</strong> <%=@sample.date_sample%></p>
      <p><strong>Data da análise:</strong> <%=@sample.date_analysis%></p>

      <p><strong>Pesquisador:</strong> <%=@sample.researcher.first_name.capitalize%> <%=@sample.researcher.last_name.capitalize%></p>
  <%end%>

  <% if @sample.type == "Gase" %>
    <div class="text-center mt-4">
      <p><strong>Lat/long:</strong> <%=@sample.latitude%>, <%=@sample.longitude%></p>
      <p><strong>Data da amostra:</strong> <%=@sample.date_sample%></p>
      <p><strong>Data da análise:</strong> <%=@sample.date_analysis%></p>

      <p><strong>Pesquisador:</strong> <%=@sample.researcher.first_name.capitalize%> <%=@sample.researcher.last_name.capitalize%></p>
  <%end%>

  <% if @sample.type == "Sediment" %>
    <%=link_to "Editar", edit_sediment_path, class: "btn btn-primary btn-sm text-center"%>
  <% elsif @sample.type == "Gase"%>
    <%=link_to "Editar", edit_gase_path, class: "btn btn-primary btn-sm text-center"%>
  <% else %>
    <%=link_to "Editar", edit_water_path, class: "btn btn-primary btn-sm text-center"%>
  <% end %>
  <%=link_to "Deletar", "#", class: "btn btn-danger btn-sm text-center"%>
  <%=link_to "Voltar", samples_path, class: "btn btn-secondary btn-sm text-center"%>
</div>
