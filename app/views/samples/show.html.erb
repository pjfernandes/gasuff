<% if @sample.type == "Carbon" || @sample.type == "Methane" %>
  <h2 class="page-title text-center mt-4 mb-4"><i class="fas fa-vial text-primary"></i> Amostra <%=@sample.id%> (<span class="text-primary"><%=@sample.class_sample.upcase%></span>) </h2>
<% elsif @sample.type == "Sediment" %>
    <h2 class="page-title text-center mt-4 mb-4"><i class="fas fa-vial text-primary"></i> Amostra <%=@sample.id%> (<span class="text-primary"><%=@sample.class_sample.capitalize%></span>) </h2>
<%end%>
<div id="map"
     style="width: 100%; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="text-center mt-4">
  <% if @sample.type == "Sediment"%>
      <p><strong>Lat/long:</strong> <%=@sample.latitude%>, <%=@sample.longitude%></p>
      <p><strong>Data da amostra:</strong> <%=@sample.date_sample%></p>
      <p><strong>Data da análise:</strong> <%=@sample.date_analysis%></p>

      <p><strong>Pesquisador:</strong> <%=@sample.researcher.first_name.capitalize%> <%=@sample.researcher.last_name.capitalize%></p>
  <%end%>

  <% if @sample.type == "Water" %>
    <div class="text-center mt-4">
      <p><strong>Lat/long:</strong> <%=@sample.latitude%>, <%=@sample.longitude%></p>
      <p><strong>Data da amostra:</strong> <%=@sample.date_sample%></p>
      <p><strong>Data da análise:</strong> <%=@sample.date_analysis%></p>

      <p><strong>Pesquisador:</strong> <%=@sample.researcher.first_name.capitalize%> <%=@sample.researcher.last_name.capitalize%></p>
  <%end%>

  <% if @sample.type == "Gase" %>
    <div class="text-center mt-4">
      <p><strong>Lat/long:</strong> <%=@sample.latitude%>, <%=@sample.longitude%></p>
      <p><strong>Data da amostra:</strong> <%=@sample.date_sample%></p>
      <p><strong>Data da análise:</strong> <%=@sample.date_analysis%></p>

      <p><strong>Pesquisador:</strong> <%=@sample.researcher.first_name.capitalize%> <%=@sample.researcher.last_name.capitalize%></p>
  <%end%>

  <%=link_to "Voltar", :back, class: "btn btn-secondary btn-sm text-center"%>
</div>
