<h2 class="page-title text-center mt-4"><i class="fas fa-user-graduate text-primary"></i> Pesquisadores</h2>

<div class="mt-3 mb-3" id="map"
     style="width: 100%; height: 350px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="text-center p-4">
  <%= link_to 'Cadastrar pesquisador', new_researcher_path, class:"btn btn-primary mt-2 mb-2" %>
  <%= link_to 'Voltar', :back, class:"btn btn-danger mt-2 ml-2 mb-2" %>
</div>

<div class="researchers-container">
  <%@researchers.each do |researcher|%>
  <div class="card-product mt-3 rounded d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">

      <div class="card-product-infos ml-2">
        <h6><i class="page-title fas fa-user-graduate text-primary"></i> <%=researcher.first_name.capitalize%> <%=researcher.last_name.capitalize%></h6>
        <p><i class="page-title fas fa-university text-primary"></i> <%=researcher.institution.upcase%> (<%=researcher.nation.capitalize%>)</p>
        <p><i class="page-title fas fas fa-envelope text-primary"></i> <%=researcher.email%></p>
      </div>
  </div>
    <%= link_to "Info", "#", class:"page-title btn btn-primary mr-3" %>
  </div>
  <%end%>
</div>
